@page
@model Ceng396.Pages.DeleteModel

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Admin List Ticket</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <div class="card mb-25 pb-25 shadow-lg p-3 mb-5 bg-white rounded">
        <h3>Are you sure you want to delete this?</h3>
        <div>
            <h4>Ticket Delete</h4>
            <hr />
            <div class="container bg-dark mt-5 pb-5">
                <dl class="row">
                    <dt class="col-sm-2 text-white">
                        @Html.DisplayNameFor(model => model.Ticket.TicketMessage)
                    </dt>
                    <dd class="col-sm-10 text-white">
                        @Html.DisplayFor(model => model.Ticket.TicketMessage)
                    </dd>
                    <dt class="col-sm-2 text-white">
                        @Html.DisplayNameFor(model => model.Ticket.TicketDone)
                    </dt>
                    <dd class="col-sm-10 text-white">
                        @Html.DisplayFor(model => model.Ticket.TicketDone)
                    </dd>
                    <dt class="col-sm-2 text-white">
                        @Html.DisplayNameFor(model => model.Ticket.Crew)
                    </dt>
                    <dd class="col-sm-10 text-white">
                        @Html.DisplayFor(model => model.Ticket.Crew.CrewId)
                    </dd>
                    <dt class="col-sm-2 text-white">
                        @Html.DisplayNameFor(model => model.Ticket.Sub)
                    </dt>
                    <dd class="col-sm-10 text-white">
                        @Html.DisplayFor(model => model.Ticket.Sub.SubAddress)
                    </dd>
                </dl>
                <div class="container pb-5 mt-5 text-white">
                    <form method="post">
                        <input type="hidden" asp-for="Ticket.TicketId" />
                        <input type="submit" value="Delete" class="btn btn-danger" /> |
                        <a class="btn btn-danger" asp-page="./Index">Back to List</a>
                    </form>
                </div>
            </div>
        </div>

    </div>
</body>
</html>
